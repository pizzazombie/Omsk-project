  CREATE TABLE devices
  (
    id int(10) PRIMARY KEY,
    project_id int(10),
    serial_number VARCHAR(100)
  );

  CREATE TABLE events
  (
    id int(10) PRIMARY KEY,
    device_id int(10),
    date DATETIME,
    is_read BOOLEAN
  );

